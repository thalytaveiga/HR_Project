@model HR_Project.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeptName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeptName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeptLocation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeptLocation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Job Role
                        </th>
                        @*<th>
                            Department
                        </th>*@
                        <th>
                            Hire Date
                        </th>
                        <th>
                            Salary
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobRoles.JobName)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Departments.DeptName)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.HireDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DeptId" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
